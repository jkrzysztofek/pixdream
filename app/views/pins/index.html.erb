<p id="notice"><%= notice %></p>

<h1>Pins</h1>

<div class="continer">
  <div class="jumbotron">
    <p>Miniatury pinów tutaj</p>
    <div class="row">

        <% @pins.each do |pin| %>
          <div class="col-lg-4">
            <div class="thumbnail">
              <%= image_tag url_for (pin.image) %></br>
              <%= pin.description %><br/>
              <%= link_to 'Show', pin %>
              <% if pin.user == current_user %>
                  <%= link_to 'Edytuj', edit_pin_path(pin) %> <br/>
                  <%= link_to 'Usuń', pin_path(pin), method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </div>
          </div>
        <% end %>
    </div>

    <br/>
    <%= link_to 'New Pin', new_pin_path, class: 'btn btn-primary' %>
  </div>
</div>
